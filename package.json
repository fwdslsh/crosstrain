{
  "name": "@fwdslsh/crosstrain",
  "version": "0.1.0",
  "description": "OpenCode plugin that loads Claude Code extension points (skills, agents, commands, hooks) into OpenCode",
  "type": "module",
  "main": "index.ts",
  "bin": {
    "crosstrain": "./src/cli.ts"
  },
  "exports": {
    ".": "./index.ts",
    "./src": "./src/index.ts",
    "./cli": "./src/cli.ts"
  },
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target bun",
    "build:cli": "bun build ./src/cli.ts --outdir ./dist --target bun --outfile crosstrain",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun run scripts/test-coverage.ts",
    "test:verbose": "bun run scripts/test.ts --verbose",
    "test:skills": "bun test --test-name-pattern skills",
    "test:agents": "bun test --test-name-pattern agents",
    "test:commands": "bun test --test-name-pattern commands",
    "test:hooks": "bun test --test-name-pattern hooks",
    "test:plugin": "bun test --test-name-pattern plugin",
    "test:cli": "bun test --test-name-pattern cli",
    "test:all": "bun run scripts/test.ts",
    "cli": "bun run ./src/cli.ts"
  },
  "peerDependencies": {
    "@opencode-ai/plugin": "*"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "bun-types": "latest",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "opencode",
    "opencode-plugin",
    "claude-code",
    "plugin",
    "bridge",
    "crosstrain",
    "ai-coding",
    "skills",
    "agents",
    "cli",
    "converter"
  ],
  "author": "fwdslsh",
  "license": "CC-BY-4.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/fwdslsh/crosstrain.git"
  },
  "bugs": {
    "url": "https://github.com/fwdslsh/crosstrain/issues"
  },
  "homepage": "https://github.com/fwdslsh/crosstrain#readme"
}

{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$comment": "Example crosstrain configuration - copy to .crosstrainrc.json or crosstrain.config.json",

  "enabled": true,
  "claudeDir": ".claude",
  "openCodeDir": ".opencode",
  "loadUserAssets": true,
  "watch": true,
  "filePrefix": "claude_",
  "verbose": false,

  "loaders": {
    "skills": true,
    "agents": true,
    "commands": true,
    "hooks": true
  },

  "modelMappings": {
    "sonnet": "anthropic/claude-sonnet-4-20250514",
    "opus": "anthropic/claude-opus-4-20250514",
    "haiku": "anthropic/claude-haiku-4-20250514"
  },

  "toolMappings": {
    "Read": "read",
    "Write": "write",
    "Edit": "edit",
    "Bash": "bash"
  },

  "marketplaces": [
    {
      "name": "local-marketplace",
      "source": "./marketplaces/local",
      "enabled": true
    },
    {
      "name": "company-plugins",
      "source": "https://github.com/your-org/claude-plugins",
      "enabled": true
    },
    {
      "name": "public-marketplace",
      "source": "your-org/claude-plugins",
      "enabled": false
    }
  ],

  "plugins": [
    {
      "name": "my-plugin",
      "marketplace": "local-marketplace",
      "installDir": "project",
      "enabled": true
    },
    {
      "name": "team-tools",
      "marketplace": "company-plugins",
      "installDir": "user",
      "enabled": true
    }
  ]
}
